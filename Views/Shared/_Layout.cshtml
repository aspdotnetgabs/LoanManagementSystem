@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
  	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Edwill Phone Credit System</title>
	  <meta name="Name" content="@ViewBag.Title - Edwill Phone Credit System" />
	  <meta name="Description" content="Site Description" />
	  <meta property="og:title" content="@ViewBag.Title - Edwill Phone Credit System" />
	  <meta property="og:description" content="Site Description" /> 
	  
    @if (TempData["alert"] != null)
    {
        <script>
            alert('@TempData["alert"]')
        </script>
    }	  

	<link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="/Content/Site.css" />
    
    @RenderSection("head", required: false)    
</head>
<body>
  <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Phone Credit System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse bg-dark" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Other Pages
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">

                            @if (Request.IsAuthenticated) 
                            {
                                if (User.IsInRole("admin")) 
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Producto/Index">Products</a>
                                    <a class="dropdown-item" href="/Customer/Index">Customers</a>
                                    <a class="dropdown-item" href="/Credit/Index">Credits</a>
                                }
                            }
                        </div>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hello, @User.Identity.Name!
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                                <a class="dropdown-item" href="/account/ChangePassword">My Account</a>
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="dropdown-item" href="#">Manage Users</a>
                                }
                                <a class="dropdown-item" href="/Account/Logoff">Log Out</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                    }

                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" />
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
</nav>

  
<div id="footer-flush-bottom-wrap">
   <div id="footer-flush-bottom-main" class="container clear-top body-content">
      @RenderBody()
   </div>
</div>

<footer id="footer-flush-bottom-container" class="container">
   <hr />
   <p>&copy; @DateTime.Now.Year - Edwill Phone Credit System</p>
</footer>
   
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/Scripts/jquery.min.js"></script>
    <script src="/Scripts/bootstrap.bundle.min.js"></script>
    
    @RenderSection("scripts", required: false)
    
    @* This is to remove the overlay ad in Somee.com *@   
    <script>
        $(document).ready(function () {
			var checkExist = setInterval(function() {
			   if ($('#nextAll').nextAll().length) {
			      clearInterval(checkExist);
			      $('#nextAll').nextAll().remove();
			   }
			}, 500);
        });
	</script>

   <hr id="nextAll" style="display:none;" />   
</body>
</html>
