@model EdwillLoanAppMVC4.Models.Customer
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Customer/Edit" method="post">
    <div class="form-group row">
        <label for="Id" class="col-4 col-form-label"></label>
        <div class="col-8">
            <input id="Id" name="Id" value="@Model.Id" type="text" class="form-control" hidden>
        </div>
    </div>
    <div class="form-group row">
        <label for="LastName" class="col-4 col-form-label">Last Name</label>
        <div class="col-8">
            <input id="LastName" name="LastName" value="@Model.LastName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="FirstName" class="col-4 col-form-label">First Name</label>
        <div class="col-8">
            <input id="FirstName" name="FirstName" value="@Model.FirstName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="Address" class="col-4 col-form-label">Address</label>
        <div class="col-8">
            <input id="Address" name="Address" value="@Model.Address" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="Phone" class="col-4 col-form-label">Phone No.</label>
        <div class="col-8">
            <input id="Phone" name="Phone" value="@Model.Phone" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>