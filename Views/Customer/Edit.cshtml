@model SharpDevelopMVC4.Models.Customer
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Customer</h2>

<form action="/Customer/Edit" method="post">
    <div class="form-group row">
        <label for="Id" class="col-4 col-form-label">Id</label>
        <div class="col-8">
            <input id="Id" name="Id" value="@Model.Id" type="text" class="form-control" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="Name" class="col-4 col-form-label">Name</label>
        <div class="col-8">
            <input id="Name" name="Name" value="@Model.Name" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="PhoneNumber" class="col-4 col-form-label">Contact Number</label>
        <div class="col-8">
            <input id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="Address" class="col-4 col-form-label">Address</label>
        <div class="col-8">
            <input id="Address" name="Address" value="@Model.Address" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Update</button>
            <a href="/Customer/Index" name="submit" type="submit" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
    
</form>